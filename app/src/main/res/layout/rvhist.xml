<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="10dp"
    app:cardElevation="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_margin="10dp"
        android:background="#f1f1f1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/food_image_history"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rest_name_history"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="2dp"
                android:paddingEnd="10dp"
                android:text="@string/rest_name"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/food_name_history"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="50dp"
                android:paddingStart="55dp"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:text="@string/food_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/food_time"
                android:layout_width="183dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="time"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/food_price_history"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/capsule"
                android:gravity="center"
                android:text="price"
                android:textColor="#fff"
                android:textSize="13sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:id="@+id/loading_history"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_height="wrap_content" />
</android.support.v7.widget.CardView>